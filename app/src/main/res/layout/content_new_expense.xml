<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_new_expense"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stoyanov.valentin.mycar.activities.NewExpenseActivity"
    tools:showIn="@layout/activity_new_expense">

    <EditText
        android:id="@+id/et_new_expense_date"
        android:focusable="false"
        android:cursorVisible="false"
        android:hint="@string/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_new_expense_notification_date"
        android:focusable="false"
        android:cursorVisible="false"
        android:hint="@string/notification_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_new_expense_odometer"
        android:hint="@string/odometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spn_new_expense_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_new_expense_price"
        android:hint="@string/price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--
        location picker maybe
    -->

    <EditText
        android:id="@+id/et_new_expense_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/notes"/>
</LinearLayout>

